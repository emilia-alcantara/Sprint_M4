<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/textViewSecondAct"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:background="#0A515B"
        android:fontFamily="@font/farro_medium"
        android:gravity="center"
        android:text="Datos de contacto:"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonLinkedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:backgroundTint="#63B6C1"
        android:text="Ir a LinkedIn"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewSecondAct"
        app:layout_constraintHorizontal_bias="0.574"
        app:layout_constraintStart_toStartOf="@+id/textViewSecondAct"
        app:layout_constraintTop_toBottomOf="@+id/textViewSecondAct" />

    <Button
        android:id="@+id/buttonWhatsApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:backgroundTint="#63B6C1"
        android:text="Obtener nÃºmero"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonLinkedIn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonLinkedIn"
        app:layout_constraintTop_toBottomOf="@+id/buttonLinkedIn" />

    <Button
        android:id="@+id/buttonEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#63B6C1"
        android:text="Enviar correo"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextCorreo"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/editTextCorreo"
        app:layout_constraintTop_toBottomOf="@+id/editTextCorreo" />

    <ImageView
        android:id="@+id/imageViewLinkedIn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonLinkedIn"
        app:layout_constraintEnd_toStartOf="@+id/buttonLinkedIn"
        app:layout_constraintTop_toTopOf="@+id/buttonLinkedIn"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/linkedin" />

    <ImageView
        android:id="@+id/imageViewWhatsApp"
        android:layout_width="60dp"
        android:layout_height="62dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonWhatsApp"
        app:layout_constraintEnd_toStartOf="@+id/buttonWhatsApp"
        app:layout_constraintTop_toTopOf="@+id/buttonWhatsApp"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/whatsapp" />

    <ImageView
        android:id="@+id/imageViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.521"
        app:srcCompat="@drawable/correo" />

    <EditText
        android:id="@+id/editTextCorreo"
        android:layout_width="265dp"
        android:layout_height="86dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Escribe tu mensaje"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/farro_medium"
        android:gravity="center"
        android:padding="15dp"
        android:text="Contacto por correo"
        android:textColor="#0A515B"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonWhatsApp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonWhatsApp"
        app:layout_constraintTop_toBottomOf="@+id/buttonWhatsApp" />

</androidx.constraintlayout.widget.ConstraintLayout>